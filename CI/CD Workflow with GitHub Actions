# .github/workflows/deploy.yml

name: CI/CD Pipeline

on:
  push:
    branches:
      - main

jobs:
  build-test-deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Lint HTML/CSS/JS
      run: |
        npm install
        npx eslint . || true
        npx htmlhint . || true

    - name: Build Docker image
      run: |
        docker build -t your-dockerhub-username/app-name:latest .

    - name: Login to Docker Hub
      run: echo "${{ secrets.DOCKER_PASSWORD }}" | docker login -u "${{ secrets.DOCKER_USERNAME }}" --password-stdin

    - name: Push Docker image
      run: docker push your-dockerhub-username/app-name:latest

    - name: Deploy to Kubernetes (Minikube)
      run: |
        kubectl apply -f k8s/deployment.yaml

    - name: Notify on success
      uses: rtCamp/action-slack-notify@v2
      env:
        SLACK_WEBHOOK: ${{ secrets.SLACK_WEBHOOK }}
        SLACK_COLOR: good
        SLACK_MESSAGE: "üöÄ Deployment Successful"

    - name: Notify on failure
      if: failure()
      uses: rtCamp/action-slack-notify@v2
      env:
        SLACK_WEBHOOK: ${{ secrets.SLACK_WEBHOOK }}
        SLACK_COLOR: danger
        SLACK_MESSAGE: "‚ùå Deployment Failed"
